                android:textColor="@color/application___design3__text__black__shark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patientDetailsIllnesses"
                style="@style/Application.Design.Body17SemiBold.SFTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/application___dimen__x4"
                android:layout_marginTop="@dimen/application___dimen__x2"
                android:textColor="@color/application___design3__text__black__shark"
                tools:text="Диабет"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
