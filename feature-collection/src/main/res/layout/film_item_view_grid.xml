<?xml version="1.0" encoding="utf-8"?>
<com.example.feature_collection.model.FilmGridItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/film_item_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterImageView"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/film_item_poster_width"
            android:layout_height="@dimen/film_item_poster_height"
            android:src="@drawable/ic_film_poster_template" />

        <TextView
            android:id="@+id/rateTextView"
            android:layout_width="@dimen/film_item_rating_width"
            android:layout_height="@dimen/film_item_rating_height"
            android:layout_marginEnd="@dimen/film_item_rating_margin_end"
            android:layout_marginTop="@dimen/film_item_rating_margin_top"
            android:background="@drawable/ic_film_rating"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_gravity="end"
            tools:text="5.5"
            android:textColor="@color/blueAccent"
            android:textSize="@dimen/film_item_rating_text_size" />

    </FrameLayout>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        tools:text="Movie" />

</com.example.feature_collection.model.FilmGridItemView>