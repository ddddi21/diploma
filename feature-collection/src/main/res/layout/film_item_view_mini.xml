<?xml version="1.0" encoding="utf-8"?>
<com.example.feature_collection.model.FilmVerticalItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/film_item_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/film_item_view_title"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/film_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_grey_arrow" />

    </FrameLayout>

</com.example.feature_collection.model.FilmVerticalItemView>